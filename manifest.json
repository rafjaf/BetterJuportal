{
  "manifest_version": 3,
  "name": "Better Juportal",
  "version": "0.1.2025.0724",
  "description": "Improves the working of Juportal website.",
  "permissions": [
	  "storage"
	],
  "content_scripts": [
    {
      "matches": [
        "*://juportal.be/*",
        "*://juportal.just.fgov.be/*"
      ],
      "js": ["scripts/content.js", "scripts/pdf-lib.min.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Better Juportal Info"
  }
}
